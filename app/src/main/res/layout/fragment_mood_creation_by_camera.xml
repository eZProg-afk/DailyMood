<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feature.creationMood.cameraAddMood.view.EmotionCreationByCameraFragment">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bottomMenuBarLinearLayout"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#37FCFAFA"
        android:background="@drawable/shape_top_rounded_16"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/switchCameraImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/shape_rounded_16"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/switch_camera_cd"
        android:padding="15dp"
        android:src="@drawable/ic_switch_camera"
        app:layout_constraintBottom_toBottomOf="@id/takePhotoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/takePhotoImageView" />

    <ImageView
        android:id="@+id/takePhotoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_16"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/make_photo_cd"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="@id/bottomMenuBarLinearLayout"
        android:src="@drawable/ic_take_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/flashToggleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_rounded_16"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/flash_toggle_cd"
        android:padding="15dp"
        android:src="@drawable/ic_flash"
        app:layout_constraintBottom_toBottomOf="@id/takePhotoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/takePhotoImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>