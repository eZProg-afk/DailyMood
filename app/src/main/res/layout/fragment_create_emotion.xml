<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainAppBackColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.create.CreateEmotionFragment">

    <TextView
        android:id="@+id/select_emotion_tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_emotion_label"
        android:fontFamily="@font/ubuntu_bold"
        ads:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/mediumMargin"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/mainAppTextColor"
        android:gravity="center" />

    <ImageView
        android:id="@+id/btn_left"
        android:layout_width="@dimen/big_image_view_size"
        android:layout_height="@dimen/big_image_view_size"
        android:src="@drawable/arrow_left"
        app:layout_constraintEnd_toStartOf="@id/carousel_view_pager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/carousel_view_pager"
        app:layout_constraintBottom_toBottomOf="@id/carousel_view_pager" />

    <ImageView
        android:id="@+id/btn_right"
        android:layout_width="@dimen/big_image_view_size"
        android:layout_height="@dimen/big_image_view_size"
        android:src="@drawable/arrow_right"
        app:layout_constraintStart_toEndOf="@id/carousel_view_pager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/carousel_view_pager"
        app:layout_constraintBottom_toBottomOf="@id/carousel_view_pager" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/carousel_view_pager"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/select_emotion_tv_label"
        app:layout_constraintStart_toEndOf="@id/btn_left"
        app:layout_constraintEnd_toStartOf="@id/btn_right" />

    <EditText
        android:id="@+id/input_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/back_et"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/ubuntu_regular"
        android:gravity="top"
        android:hint="@string/type_note_here_hint"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textColor="@color/mainCardViewTextColor"
        android:textColorHint="@color/mainCardViewTextColor"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintTop_toBottomOf="@id/carousel_view_pager" />

    <TextView
        android:id="@+id/you_may_add_photos_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_note"
        app:layout_constraintStart_toStartOf="@id/input_note"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/mainAppTextColor"
        android:layout_marginTop="@dimen/bigMargin"
        android:text="@string/you_may_add_photos_label"
        android:textSize="@dimen/medium_text_size" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_image"
        app:layout_constraintTop_toBottomOf="@id/you_may_add_photos_label"
        app:layout_constraintStart_toStartOf="@id/you_may_add_photos_label"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardElevation="@dimen/card_elevation_size"
        android:layout_marginTop="@dimen/mediumMargin"
        app:cardCornerRadius="@dimen/cardViewCornerRadius"
        app:cardBackgroundColor="@color/mainAppCardViewColor">

        <ImageView
            android:id="@+id/add_photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/smallMargin"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/ic_gallery" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_save_emotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/purple"
        android:src="@drawable/ic_save"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>