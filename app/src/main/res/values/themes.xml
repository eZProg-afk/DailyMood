<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyMood" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_black</item>
        <item name="colorSecondaryVariant">@color/very_light_black</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorRipple">@color/purple_700</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:colorBackground">@color/main_app_background</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- General attributes -->

        <item name="colorAccent">@color/facebook_color</item>

        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:divider">@drawable/menu_item_padding</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!-- General styles beginning -->

    <style name="DailyMoodDefaultBackground" parent="Theme.DailyMood">
        <item name="android:backgroundTint">?colorAccent</item>
    </style>

    <style name="DailyMoodScrollEditText" parent="Widget.AppCompat.EditText">
        <item name="android:scrollbars">vertical</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:minLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">10</item>
        <item name="android:gravity">top</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:background">@drawable/shape_rounded_16</item>
        <item name="android:backgroundTint">?colorSecondary</item>
    </style>

    <style name="DailyMoodDefaultTextStyle" parent="Theme.DailyMood">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/mainAppBackColor</item>
    </style>

    <style name="DrawerTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainAppTextColor</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?colorPrimary</item>
    </style>

    <style name="DailyMoodCalendarView" parent="Theme.DailyMood">
        <item name="cv_dayViewResource">@layout/item_calendar</item>
        <item name="cv_inDateStyle">allMonths</item>
        <item name="cv_orientation">horizontal</item>
        <item name="cv_outDateStyle">endOfRow</item>
        <item name="cv_scrollMode">paged</item>
    </style>

    <style name="TodayTextView" parent="Theme.DailyMood">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textSize">@dimen/mini_text_size</item>
        <item name="android:background">@drawable/shape_rounded_top_bottom_left_16</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- General styles end -->

    <!-- Registration styles beginning -->

    <style name="DailyMoodPurpleTextView" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="DailyMoodRegistrationInputEditText" parent="Theme.DailyMood">
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/shape_rounded_16</item>
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="DailyMoodRegistrationSimpleInputTextLayout" parent="Theme.DailyMood">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textColorHint">?colorOnSecondary</item>
    </style>

    <style name="DailyMoodRegistrationPasswordInputTextLayout" parent="DailyMoodRegistrationSimpleInputTextLayout">
        <item name="passwordToggleTint">?colorOnSecondary</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="android:textColorHint">?colorOnSecondary</item>
    </style>


    <style name="DailyMoodLoginButton" parent="Theme.DailyMood">
        <item name="android:backgroundTint">?colorSecondaryVariant</item>
        <item name="android:background">@drawable/shape_rounded_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="DailyMoodRegistrationButton" parent="Theme.DailyMood">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="DailyMoodEmailRegistrationButton" parent="DailyMoodRegistrationButton">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="iconTint">?colorSecondary</item>
        <item name="icon">@drawable/ic_email</item>
        <item name="iconGravity">textStart</item>
        <item name="android:backgroundTint">?colorPrimary</item>
    </style>

    <!-- Registration styles end -->

    <!-- Create emotion styles beginning -->


</resources>